extends layout

block content
  .main.container
    .row
      br
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Register
        form(method='POST' action='/api/users')
          div.form-group
            label(for='username') Username
            input.form-control(type='text' id='username' placeholder='Username' name='username')
          div.form-group
            label(for='email') Email
            input.form-control(type='email' id='email' placeholder='Email' name='email')
          div.form-group
            label(for='password') Password
            input.form-control(type='password' id='password' placeholder='Password' name='password')
          div.form-group
            label(for='password') Confirm Password
            input.form-control(type='password' id='confirmPassword' placeholder='Confirm Password' name='confirmPassword')
          button.btn.btn-primary(type='submit') Register
          br
          button.btn.btn-primary(type='submit') Reset
